<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description" />

    <EditText
        android:id="@+id/querybox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/querybox_hint"
        android:text="@string/querybox_default" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onHttpSearchClick"
            android:text="@string/http_search"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onHttpsSearchClick"
            android:text="@string/https_search"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/msgbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp" />
    
    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
</LinearLayout>
